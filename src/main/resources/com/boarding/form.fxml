<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane id="root" fitToHeight="true" fitToWidth="true" minWidth="300.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boarding.FormController">
    <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: skyblue;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome To Air-Con!">
             <font>
                <Font size="24.0" />
             </font>
        </Text>

        <Label text="Enter Name:" />
        <TextField fx:id="nameField" promptText="Enter Name" />
        <Label text="Enter Email:" />
        <TextField fx:id="emailField" promptText="Enter Email" />
        <Label text="Enter Phone Number (Only Numbers, No Spaces):" />
        <TextField fx:id="phoneField" promptText="Enter Phone Number" />
        <Label text="Select Your Gender:" />
        <ComboBox fx:id="genderCombo" promptText="Select Gender">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Male" />
                    <String fx:value="Female" />
                    <String fx:value="Other" />
                    <String fx:value="Prefer Not To Say" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="Enter Age:" />
        <TextField fx:id="ageField" promptText="Enter Age" />
        <Label text="Choose Your Destination:" />
        <ComboBox fx:id="flightsCombo" promptText="Choose Flight Number">
        </ComboBox>
        <!--        TODO: Enable flight selection criteria-->
        <!--        <Label text="Enter Date:"/>-->
        <!--        <DatePicker fx:id="dateField" />-->
        <!--        <Label text="Enter Destination:"/>-->
        <!--        <TextField promptText="Enter Destination" fx:id="destinationField"/>-->
        <!--        <Label text="Enter Departure Time:"/>-->
        <!--        <TextField promptText="Enter Departure Time" fx:id="departureField"/>-->
        <Text fx:id="errorText" />
        <Button onAction="#submitForm" text="Submit" />
    </VBox>
</ScrollPane>
